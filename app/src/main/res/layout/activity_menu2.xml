<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activites.isuru.Menu2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp">





                <androidx.cardview.widget.CardView
                    android:id="@+id/articlesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/textInputColor"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@color/orangeMainColor" />

                        <ImageView
                            android:id="@+id/articlesLogo"
                            android:layout_width="39dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_baseline_article_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="190dp"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/articles"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/donateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/textInputColor"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@color/orangeMainColor" />

                        <ImageView
                            android:id="@+id/donateLogo"
                            android:layout_width="39dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_baseline_handshake_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="190dp"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/Donate"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/donateCategoryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/textInputColor"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@color/orangeMainColor" />

                        <ImageView
                            android:id="@+id/donateCatLogo"
                            android:layout_width="39dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_baseline_type_specimen_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="180dp"
                        android:layout_marginTop="28dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Donation\nCategory"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/itemDonations"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/textInputColor"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@color/orangeMainColor" />

                        <ImageView

                            android:layout_width="39sp"
                            android:layout_height="35sp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/baseline_add_box_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="45dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Item Donations"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/viewMyDonations"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/textInputColor"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:background="@color/orangeMainColor" />

                        <ImageView

                            android:layout_width="39dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_baseline_type_specimen_24" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="140dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/view_my_donations"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </ScrollView>

        <ImageView
            android:id="@+id/menuHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/home"
            android:src="@drawable/ic_baseline_format_line_spacing_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/menuHome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="27dp"
            android:contentDescription="@string/home"
            android:src="@drawable/ic_baseline_home_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView37"
            style="@style/normalTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/menu_text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>